@model ClinicaVeterinaria.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

<h2>Change User</h2>

<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Update" class="btn btn-primary"><i class="fas fa-exchange-alt"></i> Update</button>
                <a asp-action="ChangePassword" class="btn btn-success"><i class="fas fa-unlock-alt"></i> Change Password</a>
            </div>

            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

