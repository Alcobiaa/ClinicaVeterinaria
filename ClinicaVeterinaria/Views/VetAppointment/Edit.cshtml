@model ClinicaVeterinaria.Models.VetAppointmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="col-sm-9 col-xs-12 pull-left">
    <h2><i class="fas fa-edit"></i> Edit</h2>
    <hr />
    <br />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="AnimalId"></label>
                    <select asp-for="AnimalId" asp-items="Model.Animals" class="form-control" ></select>
                    @*<span asp-validation-for="Animal" class="text-danger"></span>*@
                </div>
               
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="VetId"></label>
                    <select asp-for="VetId" asp-items="Model.Vets" class="form-control"></select>
                    @*<span asp-validation-for="Vet" class="text-danger"></span>*@
                </div>

                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Room" class="control-label"></label>
                    <input asp-for="Room" class="form-control" />
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Hour" class="control-label"></label>
                    <input asp-for="Hour" class="form-control" />
                    <span asp-validation-for="Hour" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fas fa-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

