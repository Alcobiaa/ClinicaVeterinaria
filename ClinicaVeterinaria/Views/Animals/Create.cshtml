@model ClinicaVeterinaria.Models.AnimalViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="col-sm-9 col-xs-12 pull-left">
    <h2><i class="fas fa-paw"></i> New Animal</h2>
    <hr />
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input id="datePicker" asp-for="Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Species" class="control-label"></label>
                    <input asp-for="Species" class="form-control" />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Breeds" class="control-label"></label>
                    <input asp-for="Breeds" class="form-control" />
                    <span asp-validation-for="Breeds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UsersClientsId">Client Name</label>
                    <select asp-for="UsersClientsId" asp-items="Model.Clients" class="form-control"></select>
                    @*<span asp-validation-for="Owner" class="text-danger"></span>*@
                </div>

                <br />
                <br />
                <br />
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fas fa-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            // initialize DatePicker component
            var datepicker = new ej.calendars.DatePicker({
                placeholder: "Select a date",
                width: "250px"
            });
            // Render initialized DatePicker.
            datepicker.appendTo('#datePicker')
        </script>
    }
}

