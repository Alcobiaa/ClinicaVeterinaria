@model ClinicaVeterinaria.Models.SMSViewModel
@{
    ViewData["Title"] = "SendEmail";
}

<div class="col-sm-9 col-xl-12 pull-left">
    <h2><i class="far fa-envelope-open"></i> Send Message</h2>
    <hr />
    <br />

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message">Message</label>
                    @*<input asp-for="Message" class="form-control" />*@
                    <textarea asp-for="Message" class="form-control" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-warning"></span>
                </div>

                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i>&nbsp Send</button>
                </div>
            </form>
            <br />
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
